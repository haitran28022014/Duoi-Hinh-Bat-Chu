<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/atp__activity_player_layout_help_call_audience_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_help_01"
            android:layout_width="90dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_button_help_01" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_below="@id/btn_help_01"
            android:layout_marginLeft="44dp"
            android:text="Bác sĩ"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:layout_below="@+id/btn_help_02"
            android:fontFamily="serif"
            android:text="Giáo viên"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_help_03"
            android:layout_width="90dp"
            android:layout_below="@id/btn_help_01"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="24dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_button_help_03" />

        <Button
            android:id="@+id/btn_help_04"
            android:layout_width="90dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_help_02"
            android:layout_marginTop="32dp"
            android:layout_marginRight="24dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_button_help_04" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_below="@id/btn_help_03"
            android:layout_marginLeft="44dp"
            android:text="Kĩ sư"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:layout_below="@id/btn_help_04"
            android:fontFamily="serif"
            android:text="Phóng viên"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_help_02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_button_help_02"
            android:layout_alignTop="@+id/btn_help_01"
            android:layout_alignLeft="@+id/btn_help_04" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/atp__activity_player_layout_help_call_title_background"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Ý kiến chuyên gia"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>